{
  "compilerOptions": {
    /* === 파일 구조 === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Node 환경 설정 === */
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "node",

    /* === 출력 관련 === */
    "removeComments": true,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,

    /* === 엄격한 타입 옵션 === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* === 기타 === */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* === 경로 별칭 === */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
